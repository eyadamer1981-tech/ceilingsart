RewriteEngine On

# Handle CORS preflight requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Route API requests
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Services routes
RewriteRule ^services/([0-9]+)$ services/service.php?id=$1 [L,QSA]
RewriteRule ^services/featured$ services/featured.php [L,QSA]
RewriteRule ^services/categories$ services/categories.php [L,QSA]
RewriteRule ^services$ services/index.php [L,QSA]

# Projects routes
RewriteRule ^projects/([0-9]+)$ projects/project.php?id=$1 [L,QSA]
RewriteRule ^projects/featured$ projects/featured.php [L,QSA]
RewriteRule ^projects/categories$ projects/categories.php [L,QSA]
RewriteRule ^projects/light$ projects/light.php [L,QSA]
RewriteRule ^projects$ projects/index.php [L,QSA]

# Blogs routes
RewriteRule ^blogs/([0-9]+)$ blogs/blog.php?id=$1 [L,QSA]
RewriteRule ^blogs/featured$ blogs/featured.php [L,QSA]
RewriteRule ^blogs$ blogs/index.php [L,QSA]

# Admin routes
RewriteRule ^admin/login$ admin/login.php [L,QSA]

# Custom sliders routes
RewriteRule ^custom-sliders/([0-9]+)$ custom-sliders/show.php?id=$1 [L,QSA]
RewriteRule ^custom-sliders$ custom-sliders/index.php [L,QSA]

# Upload and other routes
RewriteRule ^upload$ upload.php [L,QSA]
RewriteRule ^featured$ featured.php [L,QSA]

# Gallery legacy routes (redirect to projects)
RewriteRule ^gallery/categories$ projects/categories.php [L,QSA]
RewriteRule ^gallery$ gallery/index.php [L,QSA]